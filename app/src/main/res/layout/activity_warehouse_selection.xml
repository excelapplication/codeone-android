<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:orientation="vertical"
    android:background="@drawable/gradient_light_blue">

    <include
        layout="@layout/top_navigation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />

    <!--    Spinner Code-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Select Warehouse"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_bold"
        android:textSize="25sp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="SELECT  WAREHOUSE"
        android:padding="4dp"
        android:textColor="#616161" />

    <Spinner
        android:id="@+id/warehouseSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/spinner_bg"
        android:spinnerMode="dropdown" />




    <ImageButton
        android:id="@+id/warehouse_confirmation"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:text="ConfirmWarehouse"
        android:textSize="24sp"
        android:textStyle="bold"
        android:scaleType="fitXY"
        android:src="@drawable/c1"
        android:layout_marginTop="350dp"
        />


</LinearLayout>