<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.PaymentModeActivity">

    <include layout="@layout/top_navigation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:padding="4dp"
                android:text="Accounting Company"
                android:textColor="#616161" />

            <Spinner
            android:id="@+id/acc_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/spinner_bg"
            android:spinnerMode="dropdown"
            android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:padding="4dp"
                android:text="Select Bank or Cash A/C"
                android:textColor="#616161" />

            <Spinner
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/spinner_bg"
                android:spinnerMode="dropdown"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="Select Supplier / Vendor"
                android:textColor="#616161" />

            <Spinner
                android:id="@+id/parent_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/spinner_bg"
                android:spinnerMode="dropdown"
                android:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:focusableInTouchMode="false"
                app:counterTextAppearance="@style/CounterText"
                app:hintTextAppearance="@style/HintText">

                <EditText
                    android:id="@+id/outstanding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Outstanding Amount"
                    android:inputType="textPostalAddress"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="4dp"
                android:text="Select Payment Type"
                android:textColor="#616161" />

            <Spinner
                android:id="@+id/payment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/spinner_bg"
                android:spinnerMode="dropdown"
                android:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/travel_kms_id"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:focusableInTouchMode="false"
                app:counterTextAppearance="@style/CounterText"
                app:hintTextAppearance="@style/HintText">

                <EditText
                    android:id="@+id/payment_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Payment Date"
                    android:clickable="false"
                    android:longClickable="false"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textIsSelectable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chq_no_layout"
                android:layout_margin="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:counterTextAppearance="@style/CounterText"
                app:hintTextAppearance="@style/HintText">

                <EditText
                    android:id="@+id/chq_dd_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cheque/DD No."
                    android:inputType="textPostalAddress"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chq_date_layout"
                android:layout_margin="8dp"
                android:focusableInTouchMode="false"
                app:counterTextAppearance="@style/CounterText"
                app:hintTextAppearance="@style/HintText">

                <EditText
                    android:id="@+id/chq_dd_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Cheque/DD Date"
                    android:longClickable="false"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textIsSelectable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:counterTextAppearance="@style/CounterText"
                app:hintTextAppearance="@style/HintText">

                <EditText
                    android:id="@+id/narration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Narration"
                    android:inputType="textPostalAddress"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:background="@drawable/stroke_button_primary"
                android:gravity="center"
                android:textSize="25sp"
                android:text="Proceed"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>